<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			 
	
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
			<li class="active">Marcas</li>
		</ol>
	</div><!--/.row-->
	
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Administración de Marcas </h1>
		</div>
	</div><!--/.row-->
	
	<%- include('blockOptions'); %>
	
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading"><span class="glyphicon glyphicon-star"></span> Administración de Marcas </div>
				<div class="panel-body">
					<form id="formAddMarca" action="/addMarca" role="form" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label>Nombre de marca</label>
							<input type="text" id="nombre_marca" name="nombre_marca" class="form-control" 
								placeholder="Ingrese el nombre de la marca" maxlength="30" required="required"/>
						</div>
						<div class="form-group">
							<label>Descripcion</label>
							<textarea id="descripcion" name="descripcion" class="form-control" rows="3" required="required"
								 placeholder="Ingrese una descripción" maxlength="100" style="resize: none;"></textarea>
						</div>
						<div class="form-group">
							<label>Datos de contacto</label>
							<textarea id="datosContacto" name="datosContacto" class="form-control" rows="3" required="required" 
								placeholder="Ingrese los datos de contacto" maxlength="100" style="resize: none;"></textarea>
						</div>
						<div class="form-group">
							<label>Numero de Visualizaciones</label>
							<input type="number" id="numero_visualizacion" name="numero_visualizacion" class="form-control" 
								placeholder="Ingrese el numero de visualizaciones en las mesas" required="required" maxlength="6"/>
						</div>
						<div class="form-group">
							<label>Seleccione la ficha/logo de la Marca/Empresa</label>
							<input type="file" id="ficha" name="ficha" required="required"/>
							 <p class="help-block">Recomendaciones: Tipo: "JPG o PNG", Tamaño: "250px por 250px", Peso máximo: 1Mb</p>
						</div>
						<%if(errors != null){ %>
							<%for (var i in errors){%>
								<p class="text-danger"><%=errors[i].msg%></p>
							<%}%>
						<%}%>
						<button type="submit" class="btn btn-primary">Finalizar <span class="glyphicon glyphicon-ok-sign "></span></button>
					</form>
				</div><!-- end panel body -->
			</div><!-- end panel -->
		</div>
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			<div class="panel panel-primary widget">
            	<div class="panel-heading">
                	<span class="glyphicon glyphicon-star"></span> Patrocinadores Actuales
            	</div>
            	<div id="panelPatrocinadores" class="panel-body">
                	<ul class="list-group" id="listaPatrocinadores">
                	</ul>
<!--                 <a href="#" class="btn btn-primary btn-sm btn-block" role="button"><span class="glyphicon glyphicon-refresh"></span> More</a> -->
            	</div>
        </div><!-- end panel -->
	</div><!-- end col -->
	</div><!--/.row-->
</div>	<!--/.main-->

